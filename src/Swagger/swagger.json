{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Event Soft API Test",
        "description": "This is the api documentation for Event Soft Project",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "servers": [
        {
            "url": "/api/v1",
            "description": "Api Version 1.0"
        }
    ],
    "tags": [
        {
            "name": "Auth",
            "description": "API Auth services"
        },
        {
            "name":"Payment",
            "description": "API Payment services"
        },
        {
            "name": "Subscription",
            "description": "API Subscriptions services"
        },
        {
            "name": "Event",
            "description": "API Event services"
        },
        {
            "name":"Category",
            "description": "API Category services"
        }
    ],
    "paths": {
        "/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Login User",
                "requestBody":{
                    "description": "Credentials Schema",
                    "required": true,
                    "content": {
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schemas/UserLoginDTO"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Security"
                                }
                            }
                        }
                    },
                    "400":{
                        "description": "Bad Request",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/BadRequest"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/shoppers":{
            "post":{
                "tags": [
                    "Auth"
                ],
                "requestBody":{
                    "description": "Publisher Schema",
                    "required": true,
                    "content": {
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schemas/UserRegisterDTO"
                            }
                        }
                    }
                },
                "summary": "Create a Shopper Profile",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Security"
                                }
                            }
                        }
                    },
                    "400":{
                        "description": "Bad Request",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/BadRequest"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/shoppers/me":{
            "get":{
                "security": [
                    {"BearerAuth": []}
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "Get info about shopper ",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/UserDTO"
                                }
                            }
                        }
                    },
                    "401":{
                        "description": "UnAuthorized"
                    }
                }
            }
        },
        "/auth/publishers/me":{
            "get":{
                "security": [
                    {"BearerAuth": []}
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "Get info about publisher ",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/UserDTO"
                                }
                            }
                        }
                    },
                    "400":{
                        "description": "Bad Request",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/BadRequest"
                                }
                            }
                        }
                    },
                    "401":{
                        "description": "UnAuthorized"
                    }
                }
            }
        },
        "/auth/publishers/me/events":{
            "get":{
                "security": [
                    {"BearerAuth": []}
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "Get info about publisher with events",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/UserDTO"
                                }
                            }
                        }
                    },
                    "400":{
                        "description": "Bad Request",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/BadRequest"
                                }
                            }
                        }
                    },
                    "401":{
                        "description": "UnAuthorized"
                    }
                }
            }
        },
        "/auth/publishers":{
            "post":{
                "tags": [
                    "Auth"
                ],
                "requestBody":{
                    "description": "Publisher Schema",
                    "required": true,
                    "content": {
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schemas/UserRegisterDTO"
                            }
                        }
                    }
                },
                "summary": "Create a Publisher Profile",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Security"
                                }
                            }
                        }
                    },
                    "400":{
                        "description": "Bad Request",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/BadRequest"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/profile":{
            "put":{
                "tags": [
                    "Auth"
                ],
                "security": [
                    {"BearerAuth": []}
                ],
                "summary": "Upgrade to publisher profile",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401":{
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/auth/token":{
            "post":{
                "tags": [
                    "Auth"
                ],
                "requestBody":{
                    "description": "Jwt Token",
                    "required": true,
                    "content": {
                        "application/json":{
                            "schema":{
                                "type": "object",
                                "properties": {
                                    "refreshToken":{
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "summary": "Get new token",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Security"
                                }
                            }
                        }
                    },
                    "401":{
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/payments/":{
            "post":{
                "tags": [
                    "Payment"
                ],
                "security": [
                    {"BearerAuth":[]}
                ],
                "requestBody":{
                    "description": "Payment credentials",
                    "required": true,
                    "content": {
                        "application/json":{
                            "schema":{
                               "type": "object",
                               "properties": {
                                   "eventId":{
                                       "type": "string"
                                   },
                                   "zone":{
                                       "type": "string"
                                   },
                                   "quantity":{
                                       "type": "number"
                                   }

                               }
                            }
                        }
                    }
                },
                "summary": "Register a payment",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/PaymentDTO"
                                }
                            }
                        }
                    },
                    "400":{
                        "description": "Bad Request",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/BadRequest"
                                }
                            }
                        }
                    },
                    "401":{
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/subscriptions/":{
            
            "post":{
                "security": [
                    {"BearerAuth":[]}
                ],
                "tags": [
                    "Subscription"
                ],
                "requestBody":{
                    "description": "Subscription credentials",
                    "required": true,
                    "content": {
                        "application/json":{
                            "schema":{
                               "type": "object",
                               "properties": {
                                   "category":{
                                       "type": "string"
                                   }
                               }
                            }
                        }
                    }
                },
                "summary": "Subscribe to category",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400":{
                        "description": "Bad Request",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/BadRequest"
                                }
                            }
                        }
                    },
                    "401":{
                        "description": "Unauthorized"
                    }
                }

            }
        },
        "/categories/":{
            "post":{
                "tags": [
                    "Category"
                ],
                "requestBody":{
                    "description": "Category Schema",
                    "required": true,
                    "content": {
                        "multipart/form-data":{
                            "schema":{
                                "$ref":"#/components/schemas/CategoryRegisterDTO"
                            }
                        }
                    }
                },
                "summary": "Create a category",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/CategoryDTO"
                                }
                            }
                        }
                    },
                    "400":{
                        "description": "Bad Request",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/BadRequest"
                                }
                            }
                        }
                    }
                }
            },
            "get":{
                "tags": [
                    "Category"
                ],
                "summary": "Get all categories",
                "responses":{
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "type": "array",
                                    "items":{
                                        "$ref":"#/components/schemas/CategoryDTO"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/categories/{name}":{
            "get":{
                "tags": [
                    "Category"
                ],
                "summary": "Get category info ",
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description":"category name",
                        "required": true,
                        "schema":{
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/CategoryDTO"
                                }
                            }
                        }
                    },
                    "406": {
                        "description": "Domain Error"
                    }
                }
            }
        },
        "/categories/{name}/events":{
            "get":{
                "tags": [
                    "Category"
                ],
                "summary": "Get category info with events",
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description":"category name",
                        "required": true,
                        "schema":{
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/CategoryDTO"
                                }
                            }
                        }
                    },
                    "406": {
                        "description": "Domain Error"
                    }
                }
            }
        },
        "/events/":{
            "get":{
                "tags": ["Event"],
                "summary": "Get all events",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "type": "array",
                                    "items":{
                                        "$ref":"#/components/schemas/EventDTO"
                                    }
                                    
                                }
                            }
                        }
                    },
                    "406": {
                        "description": "Domain Error"
                    }
                }

            },
            "post":{
                "security": [
                    {"BearerAuth":[]}
                ],
                "tags": [
                    "Event"
                ],
                "summary": "Create an event",
                "requestBody":{
                    "description": "Event Schema",
                    "required": true,
                    "content": {
                        "multipart/form-data":{
                            "schema":{
                                "$ref":"#/components/schemas/EventRegisterDTO"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/CategoryDTO"
                                }
                            }
                        }
                    },
                    "default":{
                        "description": "Internal Error"
                    },
                    "406": {
                        "description": "Domain Error"
                    },
                    "401":{
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/events/{id}":{
            "get":{

                "tags": [
                    "Event"
                ],
                "summary": "Get event info",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description":"event id",
                        "required": true,
                        "schema":{
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/EventDTO"
                                }
                            }
                        }
                    },
                    "406": {
                        "description": "Domain Error"
                    }
                }
            }
        }
        

    },
    "components": {
        "securitySchemes": {
            "BearerAuth":{
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "BadRequest":{
                "type": "array",
                "items":{
                    "type": "object",
                    "properties": {
                        "property":{
                            "type": "string"
                        },
                        "error":{
                            "type": "string"
                        }
                    }
                }
            },
            "Security":{
                "type":"object",
                "properties": {
                    "token":{
                        "type":"string"
                    },
                    "refreshToken":{
                        "type":"string"
                    }
                }
            },
            "UserDTO":{
                "type":"object",
                "properties": {
                    "username":{
                        "type": "string"
                    },
                    "firstname":{
                        "type": "string"
                    },
                    "lastname":{
                        "type": "string"
                    },
                    "email":{
                        "type":"string",
                        "format": "email"
                    },
                    "roles":{
                        "type": "array",
                        "items":{
                            "type": "string",
                            "enum": [
                                "Publisher",
                                "Shopper"
                            ]
                        }
                    }
                }
            },
            "UserRegisterDTO":{
                "type": "object",
                "properties": {
                    "username":{
                        "type": "string"
                    },
                    "firstname":{
                        "type": "string"
                    },
                    "lastname":{
                        "type": "string"
                    },
                    "email":{
                        "type":"string",
                        "format": "email"
                    },
                    "password":{
                        "type": "string"
                    }
                }
            },
            "UserLoginDTO":{
                "type": "object",
                "properties": {
                    "username":{
                        "type":"string"
                    },
                    "password":{
                        "type":"string"
                    }
                }
            },
            "CategoryRegisterDTO":{
                "type": "object",
                "properties": {
                    "name":{
                        "type": "string"
                    },
                    "main":{
                        "type": "string",
                        "format": "binary"
                    },
                    "description":{
                        "type":"string"
                    }
                }
            },
            "CategoryDTO":{
                "type": "object",
                "properties": {
                    "name":{
                        "type": "string"
                    },
                    "image":{
                        "type": "string"
                    },
                    "description":{
                        "type":"string"
                    },
                    "events":{
                        "type": "array",
                        "items":{
                            "$ref":"#components/schemas/EventDTO"
                        }
                    }
                }
            },
            "EventRegisterDTO":{
                "type": "object",
                "properties": {
                    "name":{
                        "type": "string"
                    },
                    "main":{
                        "type": "string",
                        "format": "binary"
                    },
                    "categories":{
                        "type": "object"
                    },
                    "start":{
                        "type": "string",
                        "format":"date"
                    },
                    "end":{
                        "type": "string",
                        "format": "date"
                    },
                    "address":{
                        "type": "string"
                    },
                    "referenceLocation":{
                        "type": "string"
                    },
                    "zones":{
                        "$ref":"#components/schemas/ZoneDTO"

                    }
                }
            },
            "EventDTO":{
                "type": "object",
                "properties": {
                    "id":{
                    "type": "string",
                    "format": "uuid"
                    },
                    "owner":{
                        "type": "string"
                    },
                    "name":{
                        "type": "string"
                    },
                    "image":{
                        "type": "string"
                    },
                    "categories":{
                        "type": "array",
                        "items":{
                            "type": "string"
                        }
                    },
                    "start":{
                        "type": "string",
                        "format":"date"
                    },
                    "end":{
                        "type": "string",
                        "format": "date"
                    },
                    "address":{
                        "type": "string"
                    },
                    "referenceLocation":{
                        "type": "string"
                    },
                    "status":{
                        "type": "string",
                        "enum": [
                            "Available",
                            "Sold Out"
                        ]
                    },
                    "zones":{
                        "type": "array",
                        "items":{
                            "$ref":"#components/schemas/ZoneDTO"
                        }
                    }
                }
            },
            "ZoneDTO":{
                "type": "object",
                "properties": {
                    "quantity":{
                        "type": "number"
                    },
                    "name":{
                        "type": "string"
                    },
                    "currency":{
                        "type": "string",
                        "enum": [
                            "Soles",
                            "Dollars"
                        ]
                    },
                    "price":{
                        "type": "number"
                    }
                }
            },
            "PaymentDTO":{
                "type": "object",
                "properties": {
                    "username":{
                        "type": "string"
                    },
                    "event":{
                        "type": "string"
                    },
                    "zone":{
                        "type": "string"
                    },
                    "quantity":{
                        "type": "number"
                    }
                }
            },
            "SubscriptionDTO":{
                "type": "object",
                "properties": {
                    "username":{
                        "type": "string"
                    },
                    "category":{
                        "type":"string"
                    }
                }
            }

            

            
        }
       
    }
}
